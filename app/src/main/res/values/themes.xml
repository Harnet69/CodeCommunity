<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.CodeCommunity" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#f2488f</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorAccent">#0b1c8e</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customized theme -->
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <!-- Standard background -->
    <style name="StandardBgr">
        <item name="android:src">@drawable/splash_bgr</item>
        <item name="android:alpha">0.2</item>
        <item name="android:scaleType">centerCrop</item>
    </style>

    <style name="StandardInputBlock">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">vertical</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- Standard logo -->
    <style name="StandardLogo">
        <item name="android:layout_width">200dp</item>
        <item name="android:layout_height">175dp</item>
        <item name="android:layout_margin">70dp</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:src">@drawable/code_community</item>
        <item name="layout_constraintEnd_toEndOf">parent</item>
        <item name="layout_constraintStart_toStartOf">parent</item>
        <item name="layout_constraintTop_toTopOf">parent</item>
    </style>

    <!-- Standard button -->
    <style name="StandardBtn">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">60dp</item>
        <item name="cornerRadius">50dp</item>
        <item name="android:padding">10dp</item>
        <item name="background">@drawable/standard_btn_rounded</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/btn_standard_text_size</item>
        <item name="android:layout_gravity">center_horizontal</item>
        <item name="android:layout_margin">@dimen/btn_standard_margin</item>
        <item name="android:foreground">?attr/selectableItemBackground</item>
        <item name="android:clickable">true</item>
    </style>
</resources>